<div class="container">
<%= flash[:success] %>
<%= flash[:notice] %>

	<div class="row">
<%= render 'books/list', user: current_user , book: @bookn %>

<div class="col-xs-9">
<h2>Books detail</h2>


<table class="table table-hover table-inverse">
	<thead>
		<tr>
            <th></th>
			<th></th>

		</tr>
	</thead>
	<tbody>
		<tr>
			<td><%= attachment_image_tag @book.user, :image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %></td>
			<td><%= link_to @book.title , book_path(@book.id) ,class: "edit_book_#{@book.id}" %></td>
			<td><%= @book.opinion %></td>

            <% if @book.user == current_user %>
			<td><%= link_to "Edit", edit_book_path(@book) , class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
			<td><%= link_to "Destroy", book_path(@book), method: :delete , class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
		    <% end %>
		</tr>
	</tbody>
</table>

    </div>
  </div>