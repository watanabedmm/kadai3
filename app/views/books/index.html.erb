
<div class="container">
	<div class="row">

<%= flash[:success] %>



<%= render 'books/list', user: current_user , book: @book %>

<div class="col-xs-9">
<h2>Books</h2>


<table class="table table-hover table-inverse">
	<thead>
		<tr>
            <th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
<% @books.each do |book| %>
		<tr>
			<td><%= attachment_image_tag book.user, :image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100"  %></td>
			<td><%= link_to book.title , book_path(book.id) ,class: "book_#{book.id}" %></td>
			<td><%= book.opinion %></td>
		</tr>
      <% end %>
	</tbody>
</table>

    </div>
  </div>