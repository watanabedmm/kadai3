<div class="col-xs-3">

<h1>User info</h1>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= attachment_image_tag user, :image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img user_image", fallback: "no_image.jpg" %>
<table class="table">
	<tr>
		<th>name</th>
		<td><%= user.name %></td>
	</tr>
    <tr>
        <th>introduction</th>
        <td><%= user.introduction %></td>
    </tr>
    </table>

       <div>
       	<% if user.id == current_user.id %>
           <%= link_to "", edit_user_path(user), class: "btn btn-default col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
          <% else %>
          <%= link_to "", user_path(current_user), class: "btn btn-default col-xs-12 btn btn-default glyphicon glyphicon-wrench user_#{user.id}" %>
          <% end %>
       </div>




	<h1>New book</h1>
	<%= form_for(book) do |f| %>

	    <h4>Title</h4>
	    <%= f.text_field :title ,class: "book_title" %>

	    <h4>Opinion</h4>
	    <%= f.text_area :opinion ,class: "book_body" %>

	    <%= f.submit 'Create Book' , class: "btn btn-primary" %>
	<% end %>
  </div>

