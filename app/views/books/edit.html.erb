<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
    <div class="col-md-6 col-md-offset-3">


   <div class="field row">
    <label for="book_title">Title</label>
    <%= f.text_field :title ,class: "book_title" %>
   </div>
   <div class="field row">
     <label for="book_opinion">Opinion</label>
     <%= f.text_area :opinion ,class: "book_body" %>
   </div>
    <%= f.submit 'Update Book',class: "btn btn-primary col-xs-12" %>
    <% end %>
   <%= link_to "Show" , book_path(@book) ,class: "book#{@book.id}"%>|
   <%= link_to "Back" , books_path, class: "back" %>

	<footer>
	  <div class="container">
	  	<div class="row">
	    	<div class="col-xs-3 col-xs-offset-9">
	    		<p>CopyRight Infratop.inc</p>
	    	</div>
	    </div>
	  </div>
	</footer>
